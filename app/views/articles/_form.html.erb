  <%= render 'shared/errors', object: article %>
  <%= form_with(model: article) do |f| %>
    <%= f.select :subject, %w{common for_beginners nature self-development grammar},
                                {}, {class: "form-control", style: "width: 30%;"} %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", style: "width: 17/%;" %>
    <%= f.label :content %>
    <%= f.text_area :content,  class: "form-control" %>
    <br>
    <%= f.submit type, class: "btn btn-primary" %>
  <% end %>


